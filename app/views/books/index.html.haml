%hr/
%table.table
  = form_with url: books_path, method: :get do |form|
    %thead
      %tr
        %th id
        %th title
        %th 🦔
    %tbody.tabletest
      - words.each.with_index(1) do |word, index|
        %tr.table-row
          %td.table-data.table-border=index
          %td.table-data=word
          %td.table-data
            = form.label nil, for: word, class: 'label-checkbox' do
              = form.check_box :title_checkbox, {multiple: true, checked: checked?(word), id: word}, checked_value = word, nil
    = form.submit value: '更新3'
