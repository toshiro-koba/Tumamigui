%p#notice= notice
%h1 Books
%table{:border => "1"}
  %thead
    %tr
      %th Title
      %th Isbn
      %th{:colspan => "3"}
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.isbn
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
%br/
.book__hover-action
  %span.book-btn__normal 登録する
  %span= link_to '登録する', new_book_path, class: 'book-btn__hover'
%hr/
= form_with url: books_path, method: :get do |form|
  = form.check_box :title, {multiple: true}, checked_value = 'zutomayo', nil
  = form.check_box :title, {multiple: true}, checked_value = 'ztmy', nil
  = form.submit

%hr/
- words = %w[ずとまよ うにぐり 温れ落ち度]

= form_with url: books_path, method: :get do |form|
  %table{:border => 1}
    %thead
      %tr
        %th id
        %th title
        %th 🦔
    %tbody
      - words.each.with_index(1) do |word, index|
        %tr
          %td=index
          %td=word
          %td= form.check_box :title, {multiple: true}, checked_value = word, nil
  = form.submit value: '更新'


